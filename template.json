{
  "package": {
    "scripts": {
      "build": "craco build",
      "eject": "react-scripts eject",
      "eslint": "eslint src",
      "eslint:fix": "eslint --fix src",
      "prepare": "husky install",
      "prettier": "prettier ./src --ignore-unknown",
      "prettier:write": "prettier src --write --ignore-unknown",
      "serve": "serve -s build",
      "start": "craco start",
      "stylelint": "stylelint src/**/*.{css,scss,sass}",
      "stylelint:fix": "stylelint --fix src/**/*.{css,scss,sass}",
      "test": "craco test"
    },
    "dependencies": {
      "@craco/craco": "^7.0.0-alpha.8",
      "@emotion/react": "^11.9.0",
      "@emotion/styled": "^11.9.3",
      "@hookform/resolvers": "^2.9.1",
      "@mui/material": "^5.9.0",
      "axios": "^0.27.2",
      "joi": "^17.6.0",
      "prop-types": "^15.8.1",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-hook-form": "^7.32.0",
      "react-intl": "^6.0.4",
      "react-router-dom": "^6.3.0",
      "react-scripts": "5.0.1",
      "web-vitals": "^3.0.1",
      "zustand": "^4.1.1"
    },
    "devDependencies": {
      "@testing-library/jest-dom": "^5.16.2",
      "@testing-library/react": "^13.0.0",
      "@testing-library/user-event": "^14.2.6",
      "@types/jest": "^29.0.0",
      "@types/node": "^18.6.1",
      "@types/react": "^18.0.15",
      "@types/react-dom": "^18.0.6",
      "eslint": "8.25",
      "eslint-config-alloy": "4.7",
      "eslint-config-react-app": "^7.0.0",
      "husky": "^8.0.1",
      "lint-staged": "^13.0.1",
      "prettier": "2.7.1",
      "prettier-plugin-organize-imports": "^3.0.0",
      "prettier-plugin-packagejson": "^2.2.18",
      "serve": "^14.0.1",
      "stylelint": "^14.9.1",
      "stylelint-config-standard": "^28.0.0",
      "typescript": "^4.4.2"
    },
    "eslintConfig": {
      "extends": [
        "alloy",
        "alloy/typescript",
        "alloy/react",
        "react-app",
        "react-app/jest"
      ]
    },
    "stylelint": {
      "extends": "stylelint-config-standard"
    },
    "lint-staged": {
      "package.json": "prettier --write",
      "*.{js,jsx}": [
        "prettier --write --ignore-unknown",
        "eslint src --fix"
      ],
      "*.{ts,tsx}": [
        "prettier --parser typescript --write --ignore-unknown",
        "eslint src --fix"
      ],
      "*.{css,md}": "prettier --write --ignore-unknown"
    }
  }
}